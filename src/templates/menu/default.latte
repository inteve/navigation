
<div class="menu" n:if="!empty($items)">
	<div class="menu__inner">
	{foreach $items as $item}
		{var $page = $item[page]}
		{var $url = $control->getItemUrl($page, $basePath)}
		<a n:if="$url !== NULL" href="{$url}" class="menu__item">{$page->getLabel()}</a>
		<span n:if="$url === NULL" class="menu__item">{$page->getLabel()}</span>
	{/foreach}
	</div>
</div>
